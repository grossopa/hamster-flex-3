<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="300" height="100%">
	<fx:Script>
		<![CDATA[
			[Bindable] public var mainXML:XML;
		]]>
	</fx:Script>
	<s:BorderContainer borderStyle="solid" borderWeight="1" borderColor="black" width="100%" height="100%" >
		<s:layout>
			<s:VerticalLayout paddingLeft="0" paddingRight="0" paddingTop="0" paddingBottom="0"/>
		</s:layout>
		<mx:Form backgroundColor="red">
			<mx:FormHeading label="{resourceManager.getString('weapon', 'weaponName')} : {mainXML.attribute('name')}" />
		</mx:Form>
	</s:BorderContainer>
	<fx:Declarations>
	</fx:Declarations> 

</s:Group>
