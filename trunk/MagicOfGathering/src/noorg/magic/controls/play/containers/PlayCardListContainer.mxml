<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml"
	verticalScrollPolicy="off" horizontalScrollPolicy="off"
	creationComplete="completeHandler()">
	
	<mx:Script>
		<![CDATA[
			public var locationType:int;
		]]>
	</mx:Script>
	<mx:Script source="PlayCardListContainerAs.as" />
	<mx:VBox width="100%">
		<mx:HBox width="100%">
			<mx:Label text="{this.label}" height="20" />
			<mx:Label text="{this.cardColl.length}" />
		</mx:HBox>
		<mx:HBox id="mainContainer" paddingTop="0" paddingBottom="0" horizontalGap="{Constants.DEFAULT_GAP}"
			width="{this.width}" height="{Constants.PLAY_CARD_HEIGHT}" backgroundColor="gray"
			horizontalScrollPolicy="off" verticalScrollPolicy="off"
			dragEnter="listDragEnterHandler(event)" dragDrop="listDragDropHandler(event)" />
			<!--dragEnabled="true" dropEnabled="true" dragEnter="listDragEnterHandler(event)" dragDrop="listDragDropHandler(event)"-->
	</mx:VBox>

	<mx:Image id="insertLine" width="5" height="100%" visible="false" />
	
	<mx:Button verticalCenter="0" left="5" label="&lt;" click="moveLeftHandler()" />
	<mx:Button verticalCenter="0" right="5" label="&gt;" click="moveRightHandler()" />		

</mx:Canvas>
