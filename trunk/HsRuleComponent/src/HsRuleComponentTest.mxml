<?xml version="1.0" encoding="utf-8"?>
<s:WindowedApplication xmlns:fx="http://ns.adobe.com/mxml/2009" 
					   xmlns:s="library://ns.adobe.com/flex/spark"  frameRate="60" applicationComplete="windowedapplication1_applicationCompleteHandler(event)"
					   xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:ruleComponent="org.hamster.ruleComponent.*">
	<fx:Script>
		<![CDATA[
			import com.flashdynamix.utils.SWFProfiler;
			
			import mx.events.FlexEvent;

			protected function windowedapplication1_applicationCompleteHandler(event:FlexEvent):void
			{
				SWFProfiler.init(this.stage, this);
			}

		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:HGroup width="100%" height="100%">
		<ruleComponent:RuleComponent xFrom="{xFromSlider.value}" xTo="{xToSlider.value}" xGap="{xGapSlider.value}" 
									 yFrom="{yFromSlider.value}" yTo="{yToSlider.value}" yGap="{yGapSlider.value}" 
									 xGapWidth="{xGapWidthSlider.value}" yGapWidth="{yGapWidthSlider.value}" 
									 width="100%" height="100%" 
									 isShowCrossline="{isShowCrosslineCheckBox.selected}" 
									 ruleMode="{ruleModeComboBox.selectedItem}"/>
		<s:VGroup width="300" height="100%">
			<s:ComboBox id="ruleModeComboBox" selectedIndex="0">
				<s:dataProvider>
					<s:ArrayList>
						<fx:String>{RuleComponent.FROM_TO_MODE}</fx:String>
						<fx:String>{RuleComponent.GAP_MODE}</fx:String>
					</s:ArrayList>
				</s:dataProvider>
			</s:ComboBox>
			<s:CheckBox id="isShowCrosslineCheckBox" selected="true" label="show crossline" />
			<s:HSlider id="xFromSlider" minimum="-100" maximum="100" value="0" />
			<s:HSlider id="yFromSlider" minimum="-100" maximum="100" value="50" />
			<s:HSlider id="xToSlider" minimum="-100" maximum="100" value="50"  />
			<s:HSlider id="yToSlider" minimum="-100" maximum="100" value="100" />
			<s:HSlider id="xGapSlider" minimum="2" maximum="20" value="5" />
			<s:HSlider id="yGapSlider" minimum="2" maximum="20" value="5" />
			<s:HSlider id="xGapWidthSlider" minimum="2" maximum="20" value="5" />
			<s:HSlider id="yGapWidthSlider" minimum="2" maximum="20" value="5" />
		</s:VGroup>
	</s:HGroup>
</s:WindowedApplication>
