<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" 
	width="100%" height="{Constants.PLAY_CARD_HEIGHT}"
	verticalScrollPolicy="off" horizontalScrollPolicy="off"
	creationComplete="completeHandler()">
	<mx:Script>
		<![CDATA[
			import org.hamster.magic.common.utils.Constants;
		]]>
	</mx:Script>
	<mx:Script source="PlayCardContainerAs.as" />
	<mx:UIComponent id="backgroundUIComponent" width="100%" height="100%" />
	<mx:Image id="titleTextImage" right="10" height="100%" 
		verticalAlign="middle" horizontalAlign="center" />
	<!-- cannot use hbox because there is an issue of rotate in a HBox Container -->
	<mx:Canvas id="mainContainer" width="100%" height="{Constants.PLAY_CARD_HEIGHT}"
		verticalScrollPolicy="off" horizontalScrollPolicy="off" />
</mx:Canvas>
