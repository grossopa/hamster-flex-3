<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="800" height="375"
	verticalScrollPolicy="off" horizontalScrollPolicy="off" 
	xmlns:containers="org.hamster.magic.play.controls.containers.*" 
	xmlns:units="org.hamster.magic.play.controls.units.*"
	creationComplete="completeHandler()" xmlns:buttons="org.hamster.magic.play.controls.buttons.*">
	<mx:Script>
		<![CDATA[
			import org.hamster.magic.common.utils.Constants;
		]]>
	</mx:Script>
	<mx:Script source="PlayerContainerAs.as" />
	<mx:VBox x="226" y="0" verticalGap="5" width="100%"
		verticalScrollPolicy="off" horizontalScrollPolicy="off"
		 creationComplete="completeHandler2()">
		<containers:PlayCardContainer id="creatureContainer" />
		<containers:PlayCardContainer id="artifactContainer" />
		<containers:PlayCardContainer id="landContainer" />
		<containers:PlayCardContainer id="handContainer" />
	</mx:VBox>
	<mx:Canvas verticalScrollPolicy="off" horizontalScrollPolicy="off"
		x="0" y="260" width="100%" height="115"
		backgroundAlpha="0.5" backgroundColor="#000000">
		<containers:LifeMagicContainer id="lifeMagicContainer" y="53" />
		<units:PortraitUnit id="portraitUnit" x="226" y="0" 
			source="@Embed(source='/org/hamster/magic/play/assets/test/mouse.jpg')" />
		<mx:ViewStack id="consoleViewStack" x="341" width="365" height="115"
			 change="consoleViewStackChangeHandler()">
			<containers:PlayCardPileContainer id="playCardPileContainer" />
			<containers:PlayCardCtrlContainer id="playCardCtrlContainer" />
		</mx:ViewStack>
		<mx:VBox id="navBtnContainer" x="710" width="90" 
			verticalGap="5" paddingTop="6" paddingBottom="2"
			verticalScrollPolicy="off" horizontalScrollPolicy="off">
			<buttons:ConsoleNavButton text="牌堆" selected="true"
				click="navBtnCardPileClickHandler(event)" />
			<buttons:ConsoleNavButton text="控制" 
				click="navBtnCardCtrlClickHandler(event)" />
		</mx:VBox>
	</mx:Canvas>
	
	<units:PlayCardUnit id="previewCardUnit" 
		width="{Constants.CARD_WIDTH}" height="{Constants.CARD_HEIGHT}" />
	<mx:Image source="@Embed(source='/org/hamster/magic/play/assets/cards/card_view_border.png')"
		width="{Constants.CARD_WIDTH}" height="{Constants.CARD_HEIGHT}" />
</mx:Canvas>
